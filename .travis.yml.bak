sudo: required
dist: trusty
addons:
  apt:
    packages:
      - texlive-xetex
      - texlive-latex-extra
      - texlive-fonts-recommended
      - lmodern
      - latex-xcolor
      - texlive-lang-italian
script: bash ./compile.sh
deploy:
  provider: releases
  api_key:
    secure: 
  file: out/cv.pdf
  skip_cleanup: true
  true:
    repo: mikeporterdev/LaTeX-CV
    branches:
      only:
        - master
